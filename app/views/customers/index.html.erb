        document.addEventListener("turbolinks:before-cache", function() {
            if (dataTable !== null) {
                dataTable.destroy();
                dataTable = null;
            }
        });
    });
</script>

<div class="container text-white">
    <div class="album text-white">

        <h1>Manage Customers</h1>

        <%= link_to 'New Customer', new_customer_path, class: 'btn btn-outline-secondary text-white' %>

        <br>
        <hr class="new1">

        <table id="example" class="table table-dark table-hover table-sm text-nowrap" data-turbolinks="false">
            <thead>
                <tr class="table-dark text-center">
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>DL Number</th>
                    <th>Address</th>
                    <th>City</th>
                    <th>Phone</th>
                    <th>Customer Status</th>
                    <th>Customer Type</th>
                    <th>View Customer</th>
                    <th>Edit Customer</th>
                    <th>Delete Customer</th>
                </tr>
            </thead>

            <tbody class="text-center">
                <% @customers.each do |customer| %>
                <tr>
                    <td><%= customer.cust_f_name %></td>
                    <td><%= customer.cust_l_name %></td>
                    <td><%= customer.dl_number %></td>
                    <td><%= customer.cust_address %></td>
                    <td><%= customer.cust_city %></td>
                    <td><%= customer.cust_phone %></td>
                    <td><%= customer.customer_status_id %></td>
                    <td><%= customer.customer_type_id %></td>
                    <td><%= link_to 'View', customer, class: 'btn btn-info btn-sm text-white' %></td>
                    <td><%= link_to 'Edit', edit_customer_path(customer), class: 'btn btn-warning btn-sm'  %></td>
                    <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-light btn-sm' %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
