<p id="notice"><%= notice %></p>


<div class="container text-white">
<div class="album text-white">
<h1>Manage Customer Types</h1>
<%= link_to 'Add Customer Type', new_customer_type_path, class: 'btn btn-outline-secondary text-white' %>


<br>
<hr class="new1">

<table id="example" class="table table-dark table-hover table-sm text-nowrap" data-turbolinks="false">
  <thead>
    <tr class="table-dark text-center">
      <th>Customer Type</th>
      <th>Customer Type Description</th>
      <th>View Customer Type</th>
      <th>Edit Customer Type</th>
      <th>Delete Customer Type</th>
    </tr>
  </thead>

  <tbody class="text-center">
    <% @customer_types.each do |customer_type| %>
      <tr>
        <td><%= customer_type.customer_type %></td>
        <td><%= customer_type.customer_type_desc %></td>
        <td><%= link_to 'Show', customer_type, class: 'btn btn-info btn-xs text-white' %></td>
        <td><%= link_to 'Edit', edit_customer_type_path(customer_type), class: 'btn btn-warning btn-xs' %></td>
        <td><%= link_to 'Destroy', customer_type, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-light btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
</div>

<script type="text/javascript">
    var dataTable = $('#example').DataTable({
        "language": {
            "sLengthMenu": "Num. of Entries Per Page _MENU_",
            "sSearch": "Search:"
        }
    });

    $(document).ready(function() {
        dataTable;
    });

    document.addEventListener("turbolinks:before-cache", function() {
        if (dataTable !== null) {
            dataTable.destroy();
            dataTable = null;
        }
    });
</script>