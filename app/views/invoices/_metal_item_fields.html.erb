<div class=" form-group nested-fields ">

    <div class="field">
    <%= f.label :metal_item_desc, "Metal Item Description:" %>
    <%= f.text_field :metal_item_desc, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :net_weight, "Net Weight:" %>
    <%= f.number_field :net_weight, step: :any, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :unit_price, "Unit Price:" %>
    <%= f.number_field :unit_price, step: :any, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :metal_type_id, "Metal Type:" %>
    <br>
    <%= f.collection_select :metal_type_id, MetalType.all, :id, :metal_type, class: 'form-control' %>
  </div>
  
  <div class="field">
    <%= link_to_remove_association 'Remove A Metal Item', f, class: 'btn btn-outline-danger text-white'%>
  </div>

</div>