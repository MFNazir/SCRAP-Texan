<!DOCTYPE html>
<html>

<head>
    <title>S.C.R.A.P</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://fonts.googleapis.com/css?family=Lato|Roboto+Slab&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>


</head>

<body>
    <div class="site-wrapper">
        <div class="site-wrapper-inner">
            <div class="cover-container">

                <div id="background"></div>
                <div class="masthead clearfix">
                    <div class="inner">
                        <h3 class="masthead-brand"><%= link_to image_tag("dark2txscrap.png", alt: "tex", height: 80, width: 100), root_path %></h3>
                        <nav class="nav sticky-top nav-masthead">
                            <% if user_signed_in? %>
                            <%= link_to "Home", root_path, class: 'nav-link' %>
                            <%= link_to "Invoices", invoices_path, class: 'nav-link' %>
                            <%= link_to "Customers", customers_path, class: 'nav-link' %>
                            <%= link_to "Employees", employees_path, class: 'nav-link' %>
                            <%= link_to "Management", management_index_path, class: 'nav-link' %>
                            <%= link_to "Reports", reports_index_path, class: 'nav-link' %>
                            <% end %>
                            " "
                            <div class="btn-group">
                                <button type="button" class="btn btn-outline-secondary dropdown-toggle text-white" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Admin
                                </button>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <% if user_signed_in? %>
                                     <%= link_to "Edit Account", edit_user_registration_path,  class: 'dropdown-item text-dark' %> 
                                    <%= link_to "Logout", destroy_user_session_path, method: :delete,  class: 'dropdown-item text-dark' %>
                                    <% else %>
                                    <%= link_to "Login", new_user_session_path,  class: 'dropdown-item text-dark' %>
                                    <% end %>
                                </div>
                                </div>
                        </nav>
                    </div>
                </div>

                <%= yield %>

            </div>
        </div>
    </div>
</body>

</html>