<p id="notice"><%= notice %></p>
<script type="text/javascript">
  $(document).ready(function() {
    $('#example').DataTable( {
      
      "language": {
        "sLengthMenu": "Num. of Entries Per Page _MENU_ ",
        "sSearch": "Search:"
        }
        
        });
  });
</script>

<div class="container text-white">
<div class="album text-white">
<h1>Manage Countries</h1>
<%= link_to 'Add Country', new_country_path, class: 'btn btn-outline-secondary text-white' %>

<br>
<hr class="new1">

<table id="example" class="table table-dark table-hover table-sm text-nowrap" data-turbolinks="false">
  <thead>
    <tr class="table-dark text-center">
      <th>Country Name</th>
      <th>Show Country</th>
      <th>Edit Country</th>
      <th>Delete Country</th>
    </tr>
  </thead>

  <tbody class="text-center">
    <% @countries.each do |country| %>
      <tr>
        <td><%= country.country_name %></td>
        <td><%= link_to 'Show', country, class: 'btn btn-info btn-xs text-white' %></td>
        <td><%= link_to 'Edit', edit_country_path(country), class: 'btn btn-warning btn-xs' %></td>
        <td><%= link_to 'Destroy', country, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-light btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
</div>


