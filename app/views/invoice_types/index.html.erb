<p id="notice"><%= notice %></p>
<script type="text/javascript">
  $(document).ready(function() {
    $('#example').DataTable();
    
  });
</script>
<h1>Invoice Types</h1>
<div class="container" >

<table id="example" class="table table-striped table-bordered" style="width: 1000px;" data-turbolinks="false">
  <thead>
    <tr>
      <th>Invoice type</th>
      <th>Invoice type desc</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @invoice_types.each do |invoice_type| %>
      <tr>
        <td><%= invoice_type.invoice_type %></td>
        <td><%= invoice_type.invoice_type_desc %></td>
        <td><%= link_to 'Show', invoice_type %></td>
        <td><%= link_to 'Edit', edit_invoice_type_path(invoice_type) %></td>
        <td><%= link_to 'Destroy', invoice_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

