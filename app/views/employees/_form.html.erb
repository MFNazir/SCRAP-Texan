<%= form_with(model: employee, local: true) do |form| %>
  <% if employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
        <% employee.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
      
      <div class="album text-white">
  
          <div class="row">

              <div class="col-md-4 text-white">

                        <div class="form-group">
                          <%= form.label :employee_first_name, "Employee First Name" %>
                          <%= form.text_field :employee_first_name, placeholder: 'First Name', class: 'form-control' %>
                        </div>

                        <div class="form-group">
                          <%= form.label :employee_middle_initial, "Employee Middle Initial" %>
                          <%= form.text_field :employee_middle_initial, placeholder: 'MI', class: 'form-control' %>
                        </div>

                        <div class="form-group">
                          <%= form.label :employee_last_name, "Employee Last Name" %>
                          <%= form.text_field :employee_last_name, placeholder: 'Last Name', class: 'form-control' %>
                        </div>

                        <div class="form-group">
                          <%= form.label :dob, "Employee Date of Birth" %>
                          <br>
                          <%= form.date_select :dob, :start_year=>1900, class: 'form-control' %>
                        </div>

                        <div class="form-group">
                          <%= form.label :phone_number, "Employee Phone Number" %>
                          <%= form.text_field :phone_number, placeholder: '10-Digit: e.x. 1234567890', class: 'form-control' %>
                        </div>

                        <div class="form-group">
                          <%= form.label :home_phone, "Employee Home Phone Number" %>
                          <%= form.text_field :home_phone, placeholder: '10-Digit: e.x. 1234567890', class: 'form-control' %>
                        </div>


                        <div class="form-group">
                          <%= form.label :email_emp, "Employee E-Mail" %>
                          <%= form.text_field :email_emp, placeholder: 'Primary Email', class: 'form-control' %>
                        </div>
                                    <a href="#" class="btn btn-outline-secondary text-white">Back To Top</a>

              
              </div>

              <div class="col-md-4 text-white">
  

                <div class="form-group">
                  <%= form.label :emp_address, "Employee Address" %>
                  <%= form.text_field :emp_address, placeholder: 'Address', class: 'form-control' %>
                </div>

                <div class="form-group">
                  <%= form.label :city, "City" %>
                  <%= form.text_field :city, placeholder: 'City', class: 'form-control' %>
                </div>

                <div class="form-group">
                  <%= form.label :zip, "Zip-Code" %>
                  <%= form.text_field :zip, placeholder: '#####', class: 'form-control col-sm-7' %>
                </div>

                <div class="form-group">
                  <%= form.label :state_province_id, "State" %>
                  <br>
                  <%= form.collection_select :state_province_id, StateProvince.all, :id, :state_province_name, class: 'form-control' %>
                </div>

                <div class="form-group">
                  <%= form.label :country_id, "Country" %>
                  <br>
                  <%= form.collection_select :country_id, Country.all, :id, :country_name, class: 'form-control' %>
                </div>

              </div>

              <div class="col-md-4 text-white">
                     <div class="form-group">
                         <%= form.label :employee_type_id, "Employee Type" %>
                         <br>
                         <%= form.collection_select :employee_type_id, EmployeeType.all, :id, :employee_type, class: 'form-control' %>
                       </div>

                      <div class="form-group">
                         <%= form.label :employee_status_id, "Employee Status" %>
                         <br>
                         <%= form.collection_select :employee_status_id, EmployeeStatus.all, :id, :employee_status, class: 'form-control' %>
                      </div>
              </div>
              

          </div>
            
            
            <hr class="new1">

              <div class="col-sm-12">
                <div class="form-group text-white">
                  <div class="actions">
                    <%= form.submit "Save Employee", class: 'btn btn-secondary btn-block' %>
                  </div>
                </div>
              </div>    

      </div>  
          
<% end %>
