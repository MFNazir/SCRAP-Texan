<p id="notice"><%= notice %></p>


<div class="container text-white">
<div class="album text-white">
<h1>Manage Employee Statuses</h1>
<%= link_to 'Add Employee Status', new_employee_status_path, class: 'btn btn-outline-secondary text-white' %>

<br>
<hr class="new1">

<table id="example" class="table table-dark table-hover table-sm text-nowrap" data-turbolinks="false">
  <thead>
    <tr class="table-dark text-center">
      <th>Employee Status</th>
      <th>Employee Status Description</th>
      <th>View Employee Status</th>
      <th>Edit Employee Status</th>
    </tr>
  </thead>

  <tbody class="text-left">
    <% @employee_statuses.each do |employee_status| %>
      <tr>
        <td><%= employee_status.employee_status %></td>
        <td><%= employee_status.employee_status_desc %></td>
        <td class="text-center"><%= link_to 'View', employee_status, class: 'btn btn-info btn-sm text-white' %></td>
        <td class="text-center"><%= link_to 'Edit', edit_employee_status_path(employee_status), class: 'btn btn-warning btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
</div>

<script type="text/javascript">
    var dataTable = $('#example').DataTable({
        "language": {
            "sLengthMenu": "Num. of Entries Per Page _MENU_",
            "sSearch": "Search:"
        }
    });

    $(document).ready(function() {
        dataTable;
    });

    document.addEventListener("turbolinks:before-cache", function() {
        if (dataTable !== null) {
            dataTable.destroy();
            dataTable = null;
        }
    });
</script>