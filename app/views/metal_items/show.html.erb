<p id="notice"><%= notice %></p>


<div class="container portfolio-container text-white">
  <div class="text-white">

    <%= link_to 'Edit Metal Item', edit_metal_item_path(@metal_item), class: 'btn btn-outline-warning text-white' %> |
    <%= link_to 'Manage Metal Items', metal_items_path, class: 'btn btn-outline-secondary text-white' %>

    </div>
  <hr class="new1">
    
    <div class="album text-white">
      
      <div class="row">

        <div class="col-md-3 text-white"><h2><%= image_tag("dark2txscrap.png", alt: "tex", height: 110, width: 150) %></h2></div>
        
        <div class="col-md-6 text-white text-center">
          <a>
          <strong>Texas Scrap Metal</strong>
          <br>
          <strong>311 West Mountain Houston Rd, Houston, TX 77037</strong>
          <br>
          <strong>texscrap@gmail.com</strong>
          <br>
          <strong>123-456-7890</strong>
          </a>
          
        </div>
        
        <div class="col-md-3 text-white"><h2><%= image_tag("dark2txscrap.png", alt: "tex", height: 110, width: 150) %></h2></div>
      
      </div>
      <hr class="new1">

      <h2>Metal Item Information: </h2>
      <div class="row">
        <div class="col-md-4 text-white">

            <p>
              <strong>Metal item desc:</strong>
              <%= @metal_item.metal_item_desc %>
            </p>
            <p>
              <strong>Metal type:</strong>
              <%= @metal_item.metal_type.metal_type %>
            </p>

            <p>
              <strong>Net weight:</strong>
              <%= number_with_precision(@metal_item.net_weight, precision: 1) %>lbs
            </p>

            <p>
              <strong>Unit price:</strong>
              <%= number_to_currency(@metal_item.unit_price, precision: 2) %>
            </p>

              <strong>Unit Total:</strong>
              <%= number_to_currency(@metal_item.total, precision: 2) %>
            </p>
            

         </div>
      </div>

      <hr class="new1">

      <h2>Invoice Information: </h2>      


            <table class="table table-dark table-hover text-center table-sm text-nowrap">
              <thead>
                <tr class="table-dark">
                  <th>Invoice Number</th>
                  <th>Invoice Desc.</th>
                  <th>Invoice Date</th>
                  <th>Invoice Type</th>
                  <th>Invoice Status</th>
                </tr>
              </thead>

              <tbody>
                <% @metal_item.invoices.each do |invoice| %>
                  <tr>
                    <td><%= link_to invoice.invoice_number, invoice, :style=> 'color:darkturquoise;' %></td>
                    <td><%= invoice.invoice_desc %></td>
                    <td><%= invoice.invoice_date_time.to_formatted_s(:long_ordinal) %></td>
                    <td><%= invoice.invoice_type_id %></td>
                    <td><%= invoice.invoice_status_id %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>

      <hr class="new1">

