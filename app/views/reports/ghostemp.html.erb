<p id="notice"><%= notice %></p>

<div class="container text-white">
    <div class="album text-white">

        <div class="text-white">
            <%= link_to 'Back To Reports', reports_index_path, class: 'btn btn-outline-primary text-white' %> |
            <%= link_to 'Go Home', root_path, class: 'btn btn-outline-warning text-white' %>       
        </div>
       
        <hr class="new1">
       
        <div class="card text-center bg-dark border-light">
                    
                <div class="card-body text-center">
                <h2><%= image_tag("ghost.svg", alt: "tex", height: 70, width: 85) %></h2>
                    <h5 class="card-title text-light">Ghosted Employees Report</h5>
                    <p class="card-text text-light">The Following Report Displays All Employees That Are Considered AWOL Since Last Seen </p>
                    <%= link_to 'Manage Employees', employees_path, class: 'btn btn-outline-primary text-white' %>

                </div>
             
        </div>

        
        
        <hr class="new1">

        <table id="example" class="table table-dark table-hover table-sm text-nowrap" data-turbolinks="false">
            <thead>
                <tr class="table-dark text-center">
                    <th class="text-left">Employee Name</td>
                    <th>Phone Number</th>
                    <th class="text-left">Email</th>
                    <th class="text-left">Address</th>
                    <th class="text-left">City</th>
                    <th class="text-left">State</th>
                    <th class="text-left">Employee Type</th>
                    <th class="text-left">Employee Status</th>
                    
                </tr>
            </thead>

            <tbody class="text-center">
                <% @employees.each do |employee| %>
                <tr>
                    <td class="text-left"><%= link_to employee.emp_first_and_last_no_id, employee, :style=> 'color:darkturquoise;' %></td>
                    <td><%= employee.phone_number %></td>
                    <td class="text-left"><%= employee.email_emp %></td>
                    <td class="text-left"><%= employee.emp_address %></td>
                    <td class="text-left"><%= employee.city %></td>
                    <td class="text-left"><%= employee.state_province.state_province_name %></td>
                    <td class="text-left"><%= employee.employee_type.employee_type %></td>
                    <td class="text-left"><%= employee.employee_status.employee_status %></td>
                  
                </tr>
                <% end %>
            </tbody>
        </table>
